@page
@model EmailModel
@{
    ViewData["Title"] = "Editar Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group">
                    <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label"></label>
                </div> 
                <br />
            } 
            
            else
            {
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" disabled  />
                    <label asp-for="Email" class="form-label"></label>
                </div> 
                <br />
            } 

            <div class="form-floating">
                <input asp-for="Input.NuevoEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.NuevoEmail" class="form-label"></label>
                <span asp-validation-for="Input.NuevoEmail" class="text-danger"></span>
            </div> 
            <br />
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" btn btn-color btn-ligth btn-lg sinborde btn-cc">Cambiar Email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
